{
  "name": "@ngyewch/chartjs-v4-webcomponent",
  "version": "0.1.0-alpha.1",
  "description": "Chart.js v4 web component",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngyewch/chartjs-v4-webcomponent.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/chartjs-v4-webcomponent.es.js",
